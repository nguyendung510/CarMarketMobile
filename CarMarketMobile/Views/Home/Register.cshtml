
@{
    ViewBag.Title = "Đăng ký thành viên";
}
@section Css{
    <link href="~/Content/Apps/register.css" rel="stylesheet" />
    <link href="~/Content/Libs/font-awesome.min.css" rel="stylesheet" />
}

@section Scripts{

}

<h2 class="title-page">Đăng ký</h2>
<hr />
<h4><span class="title-des">Tạo tài khoản để đăng tin miễn phí</span></h4>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group" style="margin-top: -15px">
                <label for="UserName" class="col-sm-4 control-label"></label>
                <div class="col-sm-7">
                    <div class="input-group">
                        <span>(*): Bắt buộc nhập</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-7">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                        <input type="text" id="UserName" name="UserName" class="form-control" placeholder="* Tên đăng nhập" data-bv-field="UserName">
                    </div>
                </div>
            </div>
            <div class="form-group" style="margin-top: -15px">
                <div class="col-sm-7">
                    <div class="input-group">
                        <span style="color:red; font-size:small; font-style:italic">(Không dấu và khoảng trắng, ví dụ: anhquan)</span>
                    </div>
                </div>
            </div>

                <div class="form-group">
                    <div class="col-sm-7">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            <input type="password" id="Password" name="Password" maxlength="20" class="form-control" placeholder="* Mật khẩu" data-bv-field="Password">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-7">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            <input type="password" id="ConfirmPassword" name="ConfirmPassword" maxlength="20" class="form-control" placeholder="* Xác nhận Mật khẩu" data-bv-field="ConfirmPassword">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-7">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-phone fa-fw"></i></span>
                            <input type="text" id="Tel" name="Tel" maxlength="20" class="form-control" placeholder="* Số điện thoại" data-bv-field="Tel">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-7">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
                            <input type="text" id="Email" name="Email" maxlength="50" class="form-control" placeholder="Nhập Email" data-bv-field="Email">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-7">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-inbox fa-fw"></i></span>
                            <textarea id="Address" name="Address" class="form-control" rows="3" placeholder="Địa chỉ" data-bv-field="Address"></textarea>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Agree" class="col-sm-4 control-label"></label>
                    <div class="col-sm-7">
                        <div class="input-group">
                            <input type="checkbox" id="Agree" name="Agree" placeholder="Nhập địa chỉ" data-bv-field="Agree">
                            <i>Tôi đồng ý với <a href="/home/security" style="color: #1469eb; cursor: pointer">Chính sách bảo mật </a> và <a href="/home/policy" style="color: #1469eb; cursor: pointer">Qui chế hoạt động</a> của Xegiadinhviet.com</i>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-7">
                        <small id="status" class="help-block" style="color: red; display: none;"></small>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-5">
                        <button type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
                    </div>
                </div>
        }
    </div>
</div>
